<?xml version ="1.0"encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Gaokao.dao.MajorInfoMapper">

    <resultMap type="com.Gaokao.entity.MajorInfo" id="majorResultMap">
        <id property="id" column="major_id" />
        <result property="name" column="major_name" />
    </resultMap>
    <select id="getAllMaj"  resultMap="majorResultMap">
        select * from major
    </select>
    <select id="getMajorByName"  resultMap="majorResultMap">
        <bind name="pattern" value="'%' + _parameter + '%'" />
        select * from major
        where major_name like #{pattern}
    </select>
    <select id="getMajorById"  resultMap="majorResultMap">
	select * from major
	where major_id=#{id}
    </select>
    <insert id="addMajor"  parameterType="com.Gaokao.entity.MajorInfo">
	insert into major(major_id,major_name)
	values(#{id},#{name})
    </insert>
    <delete id="deleteMajor" parameterType="com.Gaokao.entity.MajorInfo">
        DELETE FROM major WHERE  major_id = #{id}
    </delete>
</mapper>